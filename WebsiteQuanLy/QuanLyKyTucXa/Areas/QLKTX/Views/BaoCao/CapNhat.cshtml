@using QuanLyKyTucXa.Models
@model BaoCao 
@{
    ViewBag.Title = "Duyệt Báo Cáo";
    Layout = "~/Areas/QLKTX/Views/Shared/_LayoutBQL.cshtml";
}

<div class="page-body">
    <!-- #region Tiêu đề -->
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h4>
                        Quản Lý Báo Cáo
                    </h4>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/QLKTX/Home/Index">
                                <svg class="stroke-icon">
                                    <use href="../assets/svg/icon-sprite.svg#stroke-home"></use>
                                </svg>
                            </a>
                        </li>
                        <li class="breadcrumb-item">Trang Chủ </li>
                        <li class="breadcrumb-item active">Quản Lý Báo Cáo</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- #endregion Tiêu đề -->
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h4>Báo Cáo</h4>
                        <p class="f-m-light mt-1">
                            Là các yêu cầu sinh viên gửi đến cho ban quản lý kỹ túc xá
                        </p>
                    </div>
                    <div class="card-body">
                        <div class="card-wrapper border rounded-3">
                            @using (Html.BeginForm("Duyet", "BaoCao", FormMethod.Post, new { @class = "row g-3" }))
                            {
                                <input name="MaBaoCao" value="@Model.MaBaoCao" type="hidden"/>
                                <div class="col-md-12">
                                    <label class="form-label" for="DonVi">Sinh Viên</label>
                                    <input class="form-control" name="DonVi" type="text" value="@Model.SinhVien.Ho @Model.SinhVien.Ten">
                                </div>
                                <div class="col-md-12">
                                    <label class="form-label" for="DonVi">Loại Báo Cáo</label>
                                    <input class="form-control" name="DonVi" type="text" value="@Model.LoaiBaoCao.TenLoaiBaoCao">
                                </div>
                                <div class="col-md-12">
                                    <label class="form-label" for="DonGia1">Nội Dung Báo Cáo</label>
                                    <input class="form-control" name="DonGia1" type="text" value="@Model.NoiDung" required>
                                </div>
                                <div class="col-12">
                                    <button class="btn btn-primary" type="submit">Chấp Nhận </button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>



