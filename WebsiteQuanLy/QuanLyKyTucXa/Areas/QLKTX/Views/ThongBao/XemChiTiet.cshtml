@using QuanLyKyTucXa.Models
@model ThongBao

@{
    ViewBag.Title = "Xem Chi Tiết";
    Layout = "~/Areas/QLKTX/Views/Shared/_LayoutBQL.cshtml";
}

<div class="page-body">
    <!-- #region Tiêu đề -->
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h4>
                        Quản Lý Thông Báo
                    </h4>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/QLKTX/Home/Index">
                                <svg class="stroke-icon">
                                    <use href="../assets/svg/icon-sprite.svg#stroke-home"></use>
                                </svg>
                            </a>
                        </li>
                        <li class="breadcrumb-item">Trang Chủ </li>
                        <li class="breadcrumb-item active">Xem Chi Tiết</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- #endregion Tiêu đề -->
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h4>Báo Cáo</h4>
                        <p class="f-m-light mt-1">
                            Là các thông báo từ Ban Quản Lý Ký Túc xá đến sinh viên ở phòng
                        </p>
                    </div>
                    <div class="card-body">
                        <div class="card-wrapper border rounded-3">
                            @using (Html.BeginForm("ThemMoi", "ThongBao", FormMethod.Post, new { @class = "row g-3" }))
                            {
                                <div class="col-md-12">
                                    <label class="form-label" for="NoiDung">Sinh Viên</label>
                                    <input class="form-control" name="NoiDung" value="@Model.SinhVien.Ho @Model.SinhVien.Ten" readonly />
                                </div>
                                <div class="col-md-12">
                                    <label class="form-label" for="NoiDung">Ngày Gửi</label>
                                    <input class="form-control" name="NoiDung" value="@Model.NgayGui" readonly />
                                </div>
                                <div class="col-md-12">
                                    <label class="form-label" for="NoiDung">Ngày Xem (Ngày sinh viên click xem chi tiết)</label>
                                    <input class="form-control" name="NoiDung" value="@Model.NgayXem" readonly />
                                </div>
                                <div class="col-md-12">
                                    <label class="form-label" for="NoiDung">Nội Dung</label>
                                    <textarea class="form-control" name="NoiDung" id="NoiDung" rows="4" readonly>@Model.NoiDung</textarea>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>



