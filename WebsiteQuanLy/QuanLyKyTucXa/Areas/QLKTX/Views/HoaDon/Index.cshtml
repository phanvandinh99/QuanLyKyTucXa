@using QuanLyKyTucXa.Models
@model List<LoaiHoaDon>

@{
    ViewBag.Title = "Thêm Hóa Đơn";
    Layout = "~/Areas/QLKTX/Views/Shared/_LayoutBQL.cshtml";
}

<!-- #region Nội dung chính-->
<div class="page-body">
    <!-- #region Tiêu đề -->
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h4>
                        Quản Lý Loại Hóa Đơn
                    </h4>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/QLKTX/QLKTX/Index">
                                <svg class="stroke-icon">
                                    <use href="../assets/svg/icon-sprite.svg#stroke-home"></use>
                                </svg>
                            </a>
                        </li>
                        <li class="breadcrumb-item">Trang Chủ </li>
                        <li class="breadcrumb-item active">Quản Lý Loại Hóa Đơn</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- #endregion Tiêu đề -->
    <!-- #region Nội dung -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="list-product-header">
                            <div>
                                <div class="light-box">
                                    <a data-bs-toggle="collapse" href="#collapseProduct" role="button" aria-expanded="false" aria-controls="collapseProduct">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-filter filter-icon show">
                                            <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"></polygon>
                                        </svg><i class="icon-close filter-close hide">
                                        </i>
                                    </a>
                                </div>
                                <a class="btn btn-primary" href="/QLKTX/LoaiHoaDon/ThemMoi">
                                    <i class="fa fa-plus"></i>
                                    Thêm Loại Hóa Đơn
                                </a>
                            </div>
                            <!-- #region Lọc -->
                            <div class="collapse" id="collapseProduct">
                                <div class="card card-body list-product-body">
                                    <div class="row row-cols-xl-5 row-cols-lg-4 row-cols-md-3 row-cols-sm-2 row-cols-2 g-3">
                                        <div class="col">
                                            <select class="form-select" aria-label="Default select example">
                                                <option selected="">Điều Kiện Lọc 1</option>
                                                <option value="1">Điều kiện 1</option>
                                                <option value="2">Điều kiện 2</option>
                                                <option value="3">Điều kiện 3</option>
                                            </select>
                                        </div>
                                        <div class="col">
                                            <select class="form-select" aria-label="Default select example">
                                                <option selected="">Điều Kiện Lọc 2</option>
                                                <option value="1">Điều kiện 1</option>
                                                <option value="2">Điều kiện 2</option>
                                                <option value="3">Điều kiện 3</option>
                                            </select>
                                        </div>
                                        <div class="col">
                                            <select class="form-select" aria-label="Default select example">
                                                <option selected="">Điều Kiện Lọc 3</option>
                                                <option value="1">Điều kiện 1</option>
                                                <option value="2">Điều kiện 2</option>
                                                <option value="3">Điều kiện 3</option>
                                            </select>
                                        </div>
                                        <div class="col">
                                            <select class="form-select" aria-label="Default select example">
                                                <option selected="">Điều Kiện Lọc 4</option>
                                                <option value="1">Điều kiện 1</option>
                                                <option value="2">Điều kiện 2</option>
                                                <option value="3">Điều kiện 3</option>
                                            </select>
                                        </div>
                                        <div class="col">
                                            <select class="form-select" aria-label="Default select example">
                                                <option selected="">Điều Kiện Lọc 5</option>
                                                <option value="1">Điều kiện 1</option>
                                                <option value="2">Điều kiện 2</option>
                                                <option value="3">Điều kiện 3</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- #endregion Lọc -->
                        </div>

                        <div class="list-product" id="LoaiHoaDon-list">
                            <div class="datatable-wrapper">
                                <div class="datatable-top">
                                    <div class="datatable-dropdown">
                                        <label>
                                            <select class="datatable-selector">
                                                <option value="10" selected>10</option>
                                                <option value="15">15</option>
                                                <option value="20">20</option>
                                                <option value="25">25</option>
                                                <option value="30">30</option>
                                            </select> Dòng trên/Trang
                                        </label>
                                    </div>
                                    <div class="datatable-search">
                                        <input class="datatable-input search" placeholder="Tìm kiếm..." type="search" />
                                    </div>
                                </div>
                                <div class="datatable-container">
                                    <table class="table datatable-table" id="project-status">
                                        <thead>
                                            <tr>
                                                <th data-sortable="true" style="width: 10%;">
                                                    <span class="datatable-sorter sort" data-sort="MaLoaiHoaDon">
                                                        <span class="f-light f-w-600">Mã Loại HĐ</span>
                                                    </span>
                                                </th>
                                                <th data-sortable="true" style="width: 30%;">
                                                    <span class="datatable-sorter sort" data-sort="TenLoaiHoaDon">
                                                        <span class="f-light f-w-600">Tên Loại Hóa Đơn</span>
                                                    </span>
                                                </th>
                                                <th data-sortable="true" style="width: 10%;">
                                                    <span class="datatable-sorter sort" data-sort="TenKhu">
                                                        <span class="f-light f-w-600">Tháng</span>
                                                    </span>
                                                </th>
                                                <th data-sortable="true" style="width: 9%;">
                                                    <span class="datatable-sorter sort" data-sort="thaoTac">
                                                        <span class="f-light f-w-600">Thao Tác</span>
                                                    </span>
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody class="list">
                                            @if (Model != null && Model.Any())
                                            {
                                                foreach (var item in Model)
                                                {
                                                    <tr data-index="@item.MaLoaiHoaDon">
                                                        <td class="MaLoaiHoaDon"><p class="f-light">@item.MaLoaiHoaDon</p></td>
                                                        <td class="TenLoaiHoaDon"><p class="f-light">@item.TenLoaiHoaDon</p></td>

                                                        <td class="TenLoaiHoaDon">
                                                            <input type="month" value="@DateTime.Now.ToString("yyyy-MM")" />
                                                        </td>
                                                        
                                                        <td class="thaoTac">
                                                            <div class="product-action">
                                                                <a href="/QLKTX/HoaDon/XemHoaDon?iMaLoaiHoaDon=@item.MaLoaiHoaDon"><i class="fa fa-info-circle"></i></a>
                                                                <a href="/QLKTX/HoaDon/HoaDonKhu?iMaLoaiHoaDon=@item.MaLoaiHoaDon">
                                                                    <i class="fa fa-plus"></i> Thêm Mới
                                                                </a>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                            else
                                            {
                                                <tr>
                                                    <td colspan="9" class="text-center">Không tồn tại loại hóa đơn</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <div class="datatable-bottom">
                                    <nav class="pagination"></nav>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #endregion Nội dung -->
</div>
<!-- #endregion Nội dung chính -->
<!-- #region Code listjs -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var options = {
            valueNames: ['MaLoaiHoaDon', 'TenLoaiHoaDon'],
            page: 10,
            pagination: true
        };

        var studentList = new List('LoaiHoaDon-list', options);

        function updatePagination() {
            var selector = document.querySelector('.datatable-selector');
            var newPageSize = parseInt(selector.value); // Lấy số dòng mới từ selector

            // Cập nhật số dòng hiển thị mới
            studentList.page = newPageSize;
            studentList.update();
            studentList.search();
        }

        // Bắt sự kiện khi thay đổi số dòng hiển thị
        document.querySelector('.datatable-selector').addEventListener('change', updatePagination);
    });

</script>
<!-- #endregion Code listjs -->
