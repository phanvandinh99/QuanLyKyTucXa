@using QuanLyKyTucXa.Models.ViewModel
@model List<PhongHoaDonViewModel>

@{
    ViewBag.Title = "Thêm Hóa Đơn Phòng";
    Layout = "~/Areas/QLKTX/Views/Shared/_LayoutBQL.cshtml";
}

@{
    var index = 0;
}
<!-- #region Nội dung chính-->
<div class="page-body">
    <!-- #region Tiêu đề -->
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h4>
                        Thêm Hóa Đơn Phòng
                    </h4>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/Admin/Home/Index">
                                <svg class="stroke-icon">
                                    <use href="../assets/svg/icon-sprite.svg#stroke-home"></use>
                                </svg>
                            </a>
                        </li>
                        <li class="breadcrumb-item">Trang Chủ </li>
                        <li class="breadcrumb-item active">Thêm Hóa Đơn Phòng</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- #endregion Tiêu đề -->
    <!-- #region Nội dung -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="list-product-header">
                            <!-- #region Lọc -->
                            <div class="collapse" id="collapseProduct">
                                <div class="card card-body list-product-body">
                                    <div class="row row-cols-xl-5 row-cols-lg-4 row-cols-md-3 row-cols-sm-2 row-cols-2 g-3">
                                        <div class="col">
                                            <select class="form-select" aria-label="Default select example">
                                                <option selected="">Điều Kiện Lọc 1</option>
                                                <option value="1">Điều kiện 1</option>
                                                <option value="2">Điều kiện 2</option>
                                                <option value="3">Điều kiện 3</option>
                                            </select>
                                        </div>
                                        <div class="col">
                                            <select class="form-select" aria-label="Default select example">
                                                <option selected="">Điều Kiện Lọc 2</option>
                                                <option value="1">Điều kiện 1</option>
                                                <option value="2">Điều kiện 2</option>
                                                <option value="3">Điều kiện 3</option>
                                            </select>
                                        </div>
                                        <div class="col">
                                            <select class="form-select" aria-label="Default select example">
                                                <option selected="">Điều Kiện Lọc 3</option>
                                                <option value="1">Điều kiện 1</option>
                                                <option value="2">Điều kiện 2</option>
                                                <option value="3">Điều kiện 3</option>
                                            </select>
                                        </div>
                                        <div class="col">
                                            <select class="form-select" aria-label="Default select example">
                                                <option selected="">Điều Kiện Lọc 4</option>
                                                <option value="1">Điều kiện 1</option>
                                                <option value="2">Điều kiện 2</option>
                                                <option value="3">Điều kiện 3</option>
                                            </select>
                                        </div>
                                        <div class="col">
                                            <select class="form-select" aria-label="Default select example">
                                                <option selected="">Điều Kiện Lọc 5</option>
                                                <option value="1">Điều kiện 1</option>
                                                <option value="2">Điều kiện 2</option>
                                                <option value="3">Điều kiện 3</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- #endregion Lọc -->
                        </div>

                        <div class="list-product" id="student-list">
                            <div class="datatable-wrapper">
                                <div class="datatable-top">
                                    <div class="datatable-dropdown">
                                        <label>
                                            <select class="datatable-selector">
                                                <option value="10" selected>10</option>
                                                <option value="15">15</option>
                                                <option value="20">20</option>
                                                <option value="25">25</option>
                                                <option value="30">30</option>
                                            </select> Dòng trên/Trang
                                        </label>
                                    </div>
                                    <div class="datatable-search">
                                        <input class="datatable-input search" placeholder="Tìm kiếm..." type="search" />
                                    </div>
                                </div>
                                @using (Html.BeginForm("TaoHoaDon", "HoaDon", FormMethod.Post))
                                {
                                    <input type="hidden" name="iMaLoaiHoaDon" value="@ViewBag.MaLoaiHoaDon" />
                                    <input type="date" name="dThangThanhToan" value="@ViewBag.ThangThanhToan" readonly />



                                    <div class="datatable-container">
                                        <table class="table datatable-table" id="project-status">
                                            <thead>
                                                <tr>
                                                    <th data-sortable="true" style="width: 10%;">
                                                        <span class="datatable-sorter sort" data-sort="MaPhong">
                                                            <span class="f-light f-w-600">Mã Phòng</span>
                                                        </span>
                                                    </th>
                                                    <th data-sortable="true" style="width: 25%;">
                                                        <span class="datatable-sorter sort" data-sort="TenTang">
                                                            <span class="f-light f-w-600">Phòng</span>
                                                        </span>
                                                    </th>
                                                    <th data-sortable="true" style="width: 10%;">
                                                        <span class="datatable-sorter sort" data-sort="ConTrong">
                                                            <span class="f-light f-w-600">Đã Ở/Còn Trống</span>
                                                        </span>
                                                    </th>
                                                    <th data-sortable="true" style="width: 13%;">
                                                        <span class="datatable-sorter sort" data-sort="ChuSoDau">
                                                            <span class="f-light f-w-600">Chỉ Số Củ</span>
                                                        </span>
                                                    </th>
                                                    <th data-sortable="true" style="width: 10%;">
                                                        <span class="datatable-sorter sort" data-sort="ChuSoCuoi">
                                                            <span class="f-light f-w-600">Chỉ Số Mới</span>
                                                        </span>
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody class="list">
                                                @if (Model != null && Model.Any())
                                                {
                                                    foreach (var item in Model)
                                                    {
                                                        <tr data-index="@item.Phong.MaPhong">
                                                            <td class="MaPhong">
                                                                <p class="f-light">@item.Phong.MaPhong</p>
                                                            </td>
                                                            <td class="TenTang">
                                                                <p class="f-light">@item.Phong.TenPhong, @item.Phong.Tang.TenTang</p>
                                                            </td>
                                                            <td class="ConTrong">
                                                                <p class="f-light">@item.Phong.DaO/@item.Phong.ConTrong</p>
                                                            </td>
                                                            <td class="ChuSoDau">
                                                                <input class="form-control" type="number"
                                                                       value="@(item.HoaDon?.ChuSoCuoi ?? 0)"
                                                                       name="hoaDonModels[@index].ChuSoDau" readonly />
                                                            </td>
                                                            <td class="ChuSoCuoi">
                                                                <input class="form-control" type="number" placeholder="Số mới"
                                                                       name="hoaDonModels[@index].ChuSoCuoi"
                                                                       min="@(item.HoaDon?.ChuSoCuoi ?? 0)" required />
                                                            </td>
                                                            <td>
                                                                <!-- Thêm hidden input để truyền MaPhong -->
                                                                <input type="hidden" name="hoaDonModels[@index].MaPhong" value="@item.Phong.MaPhong" />
                                                            </td>
                                                        </tr>
                                                        index++;
                                                    }
                                                }
                                                else
                                                {
                                                    <tr>
                                                        <td colspan="9" class="text-center">Hiện tại phòng không có sinh viên đăng ký ở, Nên không thể thêm hóa đơn</td>
                                                    </tr>
                                                }

                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="datatable-bottom">
                                        <div class="datatable-info">
                                            <button type="submit" class="btn btn-primary">Thêm Hóa Đơn</button>
                                        </div>
                                        <nav class="pagination"></nav>
                                    </div>
                                }
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #endregion Nội dung -->
</div>
<!-- #endregion Nội dung chính -->
<!-- #region Code listjs -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var options = {
            valueNames: ['MaPhong', 'TenTang', 'ConTrong', 'ChuSoDau', 'ChuSoCuoi', 'sdt', 'diemUuTien', 'thaoTac'],
            page: 10,
            pagination: true
        };

        var studentList = new List('student-list', options);

        function updatePagination() {
            var selector = document.querySelector('.datatable-selector');
            var newPageSize = parseInt(selector.value); // Lấy số dòng mới từ selector

            // Cập nhật số dòng hiển thị mới
            studentList.page = newPageSize;
            studentList.update();
            studentList.search();
        }

        // Bắt sự kiện khi thay đổi số dòng hiển thị
        document.querySelector('.datatable-selector').addEventListener('change', updatePagination);
    });

</script>
<!-- #endregion Code listjs -->
