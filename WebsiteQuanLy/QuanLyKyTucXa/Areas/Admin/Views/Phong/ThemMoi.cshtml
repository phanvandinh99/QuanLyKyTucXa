@using QuanLyKyTucXa.Models
@{
    ViewBag.Title = "Thêm Mới Phòng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@{
    IEnumerable<Tang> listTang = ViewBag.Tang as IEnumerable<Tang>;
    IEnumerable<LoaiPhong> listLoaiPhong = ViewBag.LoaiPhong as IEnumerable<LoaiPhong>;
    IEnumerable<DichVu> listDichVu = ViewBag.DichVu as IEnumerable<DichVu>;
}

<div class="page-body">
    <!-- #region Tiêu đề -->
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h4>
                        Quản Lý Phòng
                    </h4>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/Admin/Home/Index">
                                <svg class="stroke-icon">
                                    <use href="../assets/svg/icon-sprite.svg#stroke-home"></use>
                                </svg>
                            </a>
                        </li>
                        <li class="breadcrumb-item">Trang Chủ </li>
                        <li class="breadcrumb-item active">Quản Lý Phòng</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- #endregion Tiêu đề -->
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h4>Phòng</h4>
                        <p class="f-m-light mt-1">
                            Là các phòng của sinh viên đăng ký ở
                        </p>
                    </div>
                    <div class="card-body">
                        <div class="card-wrapper border rounded-3">
                            @using (Html.BeginForm("ThemMoi", "Phong", FormMethod.Post, new { @class = "row g-3" }))
                            {
                                <div class="col-md-12">
                                    <label class="form-label" for="TenKhu">Tên Phòng <span class="text-danger">*</span></label>
                                    <input class="form-control" name="TenPhong" type="text" placeholder="Tên phòng" required>
                                </div>
                                <div class="col-md-12">
                                    <label class="form-label" for="TenKhu">Gia Cho Thuê <span class="text-danger">*</span></label>
                                    <input class="form-control" name="GiaThue" type="number" placeholder="1,000,000" required>
                                </div>
                                <div class="col-md-12">
                                    <label class="form-label">Tầng</label>
                                    <select id="MaTang" name="MaTang" class="form-select" required>
                                        @foreach (var item in listTang)
                                        {
                                            <option value="@item.MaTang">@item.TenTang</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-12">
                                    <label class="form-label">Loại Phòng</label>
                                    <select id="MaLoaiPhong" name="MaLoaiPhong" class="form-select" required>
                                        @foreach (var item in listLoaiPhong)
                                        {
                                            <option value="@item.MaLoaiPhong">@item.TenLoaiPhong ~ @item.DonGia.ToString("#,##0") vnđ</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Dịch Vụ Phòng</label>
                                    @foreach (var item in listDichVu)
                                    {
                                        <div class="form-check">
                                            <input class="form-check-input" id="invalidCheck" type="checkbox" value="@item.MaDichVu" name="listDichVu[]">
                                            <label class="form-check-label" for="invalidCheck">@item.TenDichVu ~ @item.DonGia.ToString("#,##0") vnđ</label>
                                        </div>
                                    }
                                </div>

                                <div class="col-12">
                                    <button class="btn btn-primary" type="submit">Thêm Mới </button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>

