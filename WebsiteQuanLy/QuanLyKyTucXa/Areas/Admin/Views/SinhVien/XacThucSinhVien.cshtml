@using QuanLyKyTucXa.Models
@model List<SinhVien>

@{
    ViewBag.Title = "Xác thực tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";


}

<!-- #region Nội dung chính-->
<div class="page-body">
    <!-- #region Tiêu đề -->
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h4>
                        Quản Lý Sinh Viên
                    </h4>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="index.html">
                                <svg class="stroke-icon">
                                    <use href="../assets/svg/icon-sprite.svg#stroke-home"></use>
                                </svg>
                            </a>
                        </li>
                        <li class="breadcrumb-item">Trang Chủ </li>
                        <li class="breadcrumb-item active">Quản Lý Sinh Viên</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- #endregion Tiêu đề -->
    <!-- #region Nội dung -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="list-product-header">
                            <div>
                                <div class="light-box">
                                    <a data-bs-toggle="collapse" href="#collapseProduct" role="button" aria-expanded="false" aria-controls="collapseProduct">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-filter filter-icon show">
                                            <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"></polygon>
                                        </svg><i class="icon-close filter-close hide">
                                        </i>
                                    </a>
                                </div>
                                <a class="btn btn-primary" href="add-products.html.htm">
                                    <i class="fa fa-plus"></i>
                                    Thêm Sinh Viên
                                </a>
                            </div>
                            <!-- #region Lọc -->
                            <div class="collapse" id="collapseProduct">
                                <div class="card card-body list-product-body">
                                    <div class="row row-cols-xl-5 row-cols-lg-4 row-cols-md-3 row-cols-sm-2 row-cols-2 g-3">
                                        <div class="col">
                                            <select class="form-select" aria-label="Default select example">
                                                <option selected="">Choose Product</option>
                                                <option value="1">Apple iphone 13 Pro</option>
                                                <option value="2">Wood Chair</option>
                                                <option value="3">M185 Compact Wireless Mouse</option>
                                            </select>
                                        </div>
                                        <div class="col">
                                            <select class="form-select" aria-label="Default select example">
                                                <option selected="">Choose Category</option>
                                                <option value="1">Furniture</option>
                                                <option value="2">Smart Gadgets</option>
                                                <option value="3">Electrics</option>
                                            </select>
                                        </div>
                                        <div class="col">
                                            <select class="form-select" aria-label="Default select example">
                                                <option selected="">Choose Sub Category</option>
                                                <option value="1">Smart Phones</option>
                                                <option value="2">Smart Watches</option>
                                                <option value="3">Wireless headphone</option>
                                            </select>
                                        </div>
                                        <div class="col">
                                            <select class="form-select" aria-label="Default select example">
                                                <option selected="">Status</option>
                                                <option value="1">Sold Out </option>
                                                <option value="2">In Stock</option>
                                                <option value="3">Pre Order</option>
                                                <option value="4">Limited Stock </option>
                                            </select>
                                        </div>
                                        <div class="col">
                                            <select class="form-select" aria-label="Default select example">
                                                <option selected="">Price</option>
                                                <option value="1">56000.00</option>
                                                <option value="2">19000.00</option>
                                                <option value="3">10000.00</option>
                                                <option value="3">15000.00</option>
                                                <option value="3">99000.00</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- #endregion Lọc -->
                        </div>

                        <div class="list-product" id="student-list">
                            <div class="datatable-wrapper">
                                <div class="datatable-top">
                                    <div class="datatable-dropdown">
                                        <label>
                                            <select class="datatable-selector">
                                                <option value="1">1</option>
                                                <option value="2" selected="">2</option>
                                                <option value="15">15</option>
                                                <option value="20">20</option>
                                                <option value="25">25</option>
                                            </select> Dòng trên/Trang
                                        </label>
                                    </div>
                                    <div class="datatable-search">
                                        <input class="datatable-input search" placeholder="Tìm kiếm..." type="search" />
                                    </div>
                                </div>
                                <div class="datatable-container">
                                    <table class="table datatable-table" id="project-status">
                                        <thead>
                                            <tr>
                                                <th data-sortable="true" style="width: 3%;">
                                                    <div class="form-check">
                                                        <input class="form-check-input checkbox-primary" type="checkbox">
                                                    </div>
                                                </th>
                                                <th data-sortable="true" style="width: 26%;">
                                                    <span class="datatable-sorter sort" data-sort="ho">
                                                        <span class="f-light f-w-600">Họ</span>
                                                    </span>
                                                </th>
                                                <th data-sortable="true" style="width: 10%;">
                                                    <span class="datatable-sorter sort" data-sort="ten">
                                                        <span class="f-light f-w-600">Tên</span>
                                                    </span>
                                                </th>
                                                <th data-sortable="true" style="width: 13%;">
                                                    <span class="datatable-sorter sort" data-sort="ngaySinh">
                                                        <span class="f-light f-w-600">Ngày Sinh</span>
                                                    </span>
                                                </th>
                                                <th data-sortable="true" style="width: 10%;">
                                                    <span class="datatable-sorter sort" data-sort="gioiTinh">
                                                        <span class="f-light f-w-600">Giới Tính</span>
                                                    </span>
                                                </th>
                                                <th data-sortable="true" style="width: 6%;">
                                                    <span class="datatable-sorter sort" data-sort="email">
                                                        <span class="f-light f-w-600">Email</span>
                                                    </span>
                                                </th>
                                                <th data-sortable="true" style="width: 8%;">
                                                    <span class="datatable-sorter sort" data-sort="sdt">
                                                        <span class="f-light f-w-600">SDT</span>
                                                    </span>
                                                </th>
                                                <th data-sortable="true" style="width: 12%;">
                                                    <span class="datatable-sorter sort" data-sort="diemUuTien">
                                                        <span class="f-light f-w-600">Điểm Ưu Tiên</span>
                                                    </span>
                                                </th>
                                                <th data-sortable="true" style="width: 9%;">
                                                    <span class="datatable-sorter sort" data-sort="thaoTac">
                                                        <span class="f-light f-w-600">Thao Tác</span>
                                                    </span>
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody class="list">
                                            @if (Model != null && Model.Any())
                                            {
                                                foreach (var item in Model)
                                                {
                                                    <tr data-index="@item.MaSinhVien">
                                                        <td>
                                                            <div class="form-check">
                                                                <input class="form-check-input checkbox-primary" type="checkbox">
                                                            </div>
                                                        </td>
                                                        <td class="ho">
                                                            <div class="product-names">
                                                                <div class="light-product-box">
                                                                    <img class="img-fluid" src="~/Assets/Student/images/AnhSinhVien/@item.AnhChanDung" alt="@item.Ten">
                                                                </div>
                                                                <p>@item.Ho</p>
                                                            </div>
                                                        </td>
                                                        <td class="ten"><p class="f-light">@item.Ten</p></td>
                                                        <td class="ngaySinh"><p class="f-light">@item.NgaySinh.ToString("dd-MM-yyyy")</p></td>
                                                        <td class="gioiTinh"><p class="f-light"> @(item.GioiTinh ? "Nữ" : "Nam")</p></td>
                                                        <td class="email"><p class="f-light">@item.Email</p></td>
                                                        <td class="sdt"><span class="badge badge-light-secondary">@item.SDT</span></td>
                                                        <td class="diemUuTien"><p class="f-light">@item.DiemUuTien</p></td>
                                                        <td class="thaoTac">
                                                            <div class="product-action">
                                                                <a href="#"><i class="fa fa-edit"></i></a>
                                                                <a href="/Admin/SinhVien/XoaSinhVien?sMaSinhVien=@item.MaSinhVien"><i class="fa fa-remove"></i></a>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                            else
                                            {
                                                <tr>
                                                    <td colspan="9" class="text-center">Không có tài khoản sinh viên cần duyệt</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <div class="datatable-bottom">
                                    <div class="datatable-info">
                                        <a href="#" class="btn btn-primary">Duyệt</a>
                                        Showing 1 to 10 of 26 entries
                                    </div>
                                    @*<nav class="datatable-pagination"></nav>
                                        <nav class="pagination"></nav>*@
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #endregion Nội dung -->
</div>
<!-- #endregion Nội dung chính -->
<!-- #region Code listjs -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var options = {
            valueNames: ['ho', 'ten', 'ngaySinh', 'gioiTinh', 'email', 'sdt', 'diemUuTien', 'thaoTac'],
            page: 1,
            pagination: true
        };

        var studentList = new List('student-list', options);

        function updatePagination() {
            var selector = document.querySelector('.datatable-selector');
            var newPageSize = parseInt(selector.value);

            studentList.page = newPageSize;
            studentList.update();
        }

        // Thay đổi số dòng hiển thị
        document.querySelector('.datatable-selector').addEventListener('change', updatePagination);
    });
</script>
<!-- #endregion Code listjs -->
