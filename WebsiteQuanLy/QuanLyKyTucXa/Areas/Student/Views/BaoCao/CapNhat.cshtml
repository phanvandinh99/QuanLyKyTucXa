@using QuanLyKyTucXa.Models
@model BaoCao

@{
    ViewBag.Title = "Cập Nhật Báo Cáo";
    Layout = "~/Areas/Student/Views/Shared/_LayoutStudent.cshtml";
}

<div>
    <!-- Inner Banner Start -->
    <div class="at-haslayout at-innerbannerholder">
        <div class="container">
            <div class="row justify-content-md-center">
                <div class="col-12 col-md-12">
                    <div class="at-innerbannercontent">
                        <div class="at-title"><h2>Cập Nhật Báo Cáo</h2></div>
                        <ol class="at-breadcrumb">
                            <li><a href="~/Student/Home/Index">Trang Chủ</a></li>
                            <li>Cập Nhật Cáo Đến Ban Quản Lý</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Inner Banner End -->
    <!-- Main Start -->
    <main id="at-main" class="at-main at-haslayout">
        <!-- Contact Form Start -->
        <section class="at-haslayout at-main-section">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12 col-sm-12 col-md-12 push-md-0 col-lg-10 push-lg-1 col-xl-8 push-xl-2">
                        <div class="at-sectionhead">
                            <div class="at-sectiontitle">
                                <h2>THÔNG TIN YÊU CẦU BÁO CÁO</h2>
                                <span>Hỗ Trợ Sinh Viên 24/7</span>
                            </div>
                            <div class="at-description">
                                <p>
                                    Nhập đầy đủ thông tin cập nhật muốn gửi đến ban quản lý ký túc xá
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-sm-12 col-md-12 push-md-0 col-lg-12 col-xl-10 push-xl-1">
                        @using (Html.BeginForm("CapNhat", "BaoCao", FormMethod.Post, new { @class = "at-formtheme at-formcontactus" }))
                        {
                            <fieldset>
                                <input type="hidden" name="MaBaoCao" value="@Model.MaBaoCao"/>
                                <div class="form-group form-group-half">
                                    <label>Loại Báo Cáo</label>
                                    <select name="MaLoaiBaoCao">
                                        <option value="4" @(ViewBag.MaLoaiBaoCao == 4 ? "selected" : "")>Hư Hỏng Vật Chất</option>
                                        <option value="5" @(ViewBag.MaLoaiBaoCao == 5 ? "selected" : "")>Yêu Cầu Khác</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <textarea class="form-control" required="" name="NoiDung">@Model.NoiDung</textarea>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="at-btn">Cập Nhật</button>
                                </div>
                            </fieldset>
                        }
                    </div>
                </div>
            </div>
        </section>
        <!-- Contact Form End -->
    </main>
    <!-- Main End -->
</div>
